<div class="iq-slidergallery owl-carousel" data-arrow-left="{{arrowleft}}" data-arrow-right="{{arrowright}}" data-cols="{% if numcols|render is not empty %}{{numcols}}{% else %}1{% endif %}">
  {% for image in images %}
    {% if image.src %}
    <div class="col">
      <a href="{{image.src}}" data-toggle="lightbox-gallery" data-gallery="gallery"
        data-max-width="1920" data-title="{{image.alt}}" >
        {% include '@iq_barrio/includes/responsive-image.html.twig' with {
          'image' : image.uri,
          'sizes': sizes,
          'template': image_template|render,
          'attributes' : {
            title: image.alt|render,
            alt: image.alt|render
          }
        } %}
      </a>
    </div>
    {% endif %}
  {% endfor %}
</div>
