<div class="iq-trust-element" >
    {% if icon|render is not empty %}
    <div class="iq-trust-element-icon">
        <i class="fa {{icon}}" data-align="{{icon_position}}"></i>
    </div>
    {% else %}
    <div class="iq-trust-element-icon iq-trust-element-number iq-alternate-hide">
        <span data-align="{{icon_position}}" >{{text}}</span>
    </div>
    {% endif %}
    <div class="iq-trust-element-text iq-text">
        {{content}}
    </div>
</div>
